   </xsd:complexType>

   <xsd:simpleType name="Unit">
      <xsd:annotation>
         <xsd:documentation>Must conform to definition of unit in VOUnit spec.</xsd:documentation>
         <xsd:appinfo>
            <vodml-id>Unit</vodml-id>
         </xsd:appinfo>
      </xsd:annotation>
      <xsd:restriction base="xsd:string"/>
